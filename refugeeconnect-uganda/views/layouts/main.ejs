<!-- views/layouts/main.ejs -->
<!DOCTYPE html>
<html lang="<%= user ? user.preferredLanguage : 'en' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'RefugeeConnect Uganda' %></title>
    
    <!-- PWA Meta -->
    <meta name="theme-color" content="#1976d2">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <link rel="manifest" href="/manifest.json">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/themes.css">
    <link rel="stylesheet" href="/css/accessibility.css">
    
    <!-- Language-specific fonts -->
    <% if (user && ['ar', 'sw'].includes(user.preferredLanguage)) { %>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@300;400;500;700&display=swap" rel="stylesheet">
    <% } %>
</head>
<body class="<%= user && user.preferences && user.preferences.accessibility && user.preferences.accessibility.highContrast ? 'high-contrast' : '' %>" 
      data-language="<%= user ? user.preferredLanguage : 'en' %>">
    
    <!-- Accessibility Skip Link -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <!-- Top Navigation -->
    <%- include('../partials/navbar') %>
    
    <!-- Offline Indicator -->
    <div id="offline-indicator" class="alert alert-warning d-none" role="alert">
        <i class="fas fa-wifi-slash me-2"></i>
        <span data-translate="offline.message">You are currently offline. Some features may be limited.</span>
    </div>
    
    <!-- Main Content -->
    <main id="main-content" class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <% if (user) { %>
                <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                    <%- include('../partials/sidebar') %>
                </nav>
            <% } %>
            
            <!-- Page Content -->
            <div class="col-md-<%= user ? '9' : '12' %> ms-sm-auto col-lg-<%= user ? '10' : '12' %> px-md-4">
                <!-- Breadcrumb -->
                <% if (breadcrumbs) { %>
                    <nav aria-label="breadcrumb" class="mt-3">
                        <ol class="breadcrumb">
                            <% breadcrumbs.forEach((crumb, index) => { %>
                                <li class="breadcrumb-item <%= index === breadcrumbs.length - 1 ? 'active' : '' %>">
                                    <% if (index === breadcrumbs.length - 1) { %>
                                        <%= crumb.name %>
                                    <% } else { %>
                                        <a href="<%= crumb.url %>"><%= crumb.name %></a>
                                    <% } %>
                                </li>
                            <% }) %>
                        </ol>
                    </nav>
                <% } %>
                
                <!-- Flash Messages -->
                <%- include('../partials/flash-messages') %>
                
                <!-- Page Content -->
                <%- body %>
            </div>
        </div>
    </main>
    
    <!-- Footer -->
    <%- include('../partials/footer') %>
    
    <!-- Emergency Quick Access -->
    <div class="emergency-fab">
        <button class="btn btn-danger btn-fab" data-bs-toggle="modal" data-bs-target="#emergencyModal" aria-label="Emergency Contacts">
            <i class="fas fa-phone"></i>
        </button>
    </div>
    
    <!-- Emergency Modal -->
    <%- include('../partials/emergency-modal') %>
    
    <!-- Language Selector Modal -->
    <%- include('../partials/language-modal') %>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    
    <!-- Core JavaScript -->
    <script src="/js/utils.js"></script>
    <script src="/js/translations.js"></script>
    <script src="/js/accessibility.js"></script>
    <script src="/js/offline.js"></script>
    <script src="/js/main.js"></script>
    
    <!-- Page-specific JavaScript -->
    <% if (typeof pageScript !== 'undefined') { %>
        <script src="/js/<%= pageScript %>"></script>
    <% } %>
    
    <!-- PWA Service Worker -->
    <script>
        if ('serviceWorker' in navigator && '<%= process.env.NODE_ENV %>' === 'production') {
            navigator.serviceWorker.register('/sw.js')
                .then(reg => console.log('Service Worker registered'))
                .catch(err => console.log('Service Worker registration failed'));
        }
    </script>
</body>
</html>
